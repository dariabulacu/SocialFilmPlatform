@model SocialFilmPlatform.Models.Review
@{
    var userCurentId = ViewBag.UserCurent as string;
    var esteAdmin = (ViewBag.EsteAdmin as bool?) ?? false;
}

<li class="list-group-item" id="review-@Model.Id">
    <div class="d-flex justify-content-between align-items-start mb-2">
        <div>
            <strong>@((Model.User?.UserName ?? "Anonymous"))</strong>
            <span class="text-muted small ms-2">
                @Model.DatePosted.ToString("dd.MM.yyyy HH:mm")
            </span>
        </div>
        @if (User.Identity.IsAuthenticated && 
             (Model.UserId == userCurentId || esteAdmin))
        {
            <div class="d-flex gap-2">
                <a class="btn btn-sm btn-outline-secondary d-flex align-items-center gap-1" 
                   asp-controller="Reviews" 
                   asp-action="Edit" 
                   asp-route-id="@Model.Id"
                   title="Edit review">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                    </svg>
                    <span class="d-none d-sm-inline">Edit</span>
                </a>
                <form asp-controller="Reviews" 
                      asp-action="Delete" 
                      asp-route-id="@Model.Id" 
                      method="post" 
                      class="d-inline delete-review-form"
                      data-review-id="@Model.Id">
                    <button type="submit" 
                            class="btn btn-sm btn-outline-danger d-flex align-items-center gap-1"
                            title="Delete review">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                        </svg>
                        <span class="d-none d-sm-inline">Delete</span>
                    </button>
                </form>
            </div>
        }
    </div>
    <div class="review-content">@Html.Raw(Model.Content)</div>
    
    <!-- Voting Section -->
    <div class="d-flex align-items-center gap-3 mt-2">
        @{
            var likes = Model.ReviewVotes?.Count(v => v.IsLike) ?? 0;
            var dislikes = Model.ReviewVotes?.Count(v => !v.IsLike) ?? 0;
            var userVote = Model.ReviewVotes?.FirstOrDefault(v => v.UserId == userCurentId);
            var userVoteStatus = userVote == null ? "none" : (userVote.IsLike ? "like" : "dislike");
            var canVote = User.IsInRole("User");
        }

        <div class="btn-group btn-group-sm" role="group">
            <button type="button" 
                    class="btn @(userVoteStatus == "like" ? "btn-success" : "btn-outline-success") vote-btn"
                    data-review-id="@Model.Id"
                    data-type="like"
                    @(canVote ? "" : "disabled")>
                <i class="bi bi-hand-thumbs-up"></i>
                <span class="count">@likes</span>
            </button>
            <button type="button" 
                    class="btn @(userVoteStatus == "dislike" ? "btn-danger" : "btn-outline-danger") vote-btn"
                    data-review-id="@Model.Id"
                    data-type="dislike"
                    @(canVote ? "" : "disabled")>
                <i class="bi bi-hand-thumbs-down"></i>
                <span class="count">@dislikes</span>
            </button>
        </div>
    </div>
    <!-- End Voting Section -->
</li>
