<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Platforma Sociala de Filme</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dark-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocialFilmPlatform.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/video-bg.css" asp-append-version="true" />
    
    <!-- Vintage Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Lato:ital,wght@0,300;0,400;1,400&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --vintage-bg: #fdfbf7;
            --vintage-text: #1a1a1a;
            --vintage-gold: #c4a055;
            --font-display: 'Cinzel', serif;
            --font-body: 'Lato', sans-serif;
        }
        
        body:not(.home-body) {
            background-color: var(--vintage-bg) !important;
            color: var(--vintage-text);
            font-family: var(--font-body);
        }

        .navbar-vintage {
            background-color: var(--vintage-bg);
            border-bottom: 1px solid #e0e0e0;
            padding: 0.8rem 0;
            box-shadow: none !important;
        }

        .navbar-vintage .navbar-brand {
            font-family: var(--font-display);
            font-weight: 700;
            letter-spacing: 1px;
            color: #000 !important;
            font-size: 1.4rem;
        }

        .navbar-vintage .nav-link {
            font-family: var(--font-body);
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 1px;
            color: #555 !important;
            padding: 0.5rem 1rem !important;
            transition: color 0.3s;
        }

        .navbar-vintage .nav-link:hover {
            color: #000 !important;
            text-decoration: underline;
            text-decoration-thickness: 1px;
            text-underline-offset: 4px;
        }

        .footer-vintage {
            border-top: 1px solid #e0e0e0;
            background-color: var(--vintage-bg);
            font-family: var(--font-display);
            color: #777;
            padding: 1.5rem 0;
            font-size: 0.9rem;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="@(ViewData["FullWidth"] as bool? == true ? "home-body" : "")">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm @(ViewData["FullWidth"] as bool? == true ? "navbar-transparent navbar-dark box-shadow" : "navbar-vintage")">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SOCIAL FILM ARCHIVE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Movies" asp-action="Index">Catalog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Genres" asp-action="Index">Genres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Actors" asp-action="Index">Actors</a>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    @if (ViewData["FullWidth"] as bool? == true)
    {
        <main role="main" class="p-0">
            @RenderBody()
        </main>
    }
    else
    {
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    <footer class="footer text-muted @(ViewData["FullWidth"] as bool? == true ? "footer-transparent border-top" : "footer-vintage")">
        <div class="container">
            &copy; 2025 - Social Film Platform - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
