@model SocialFilmPlatform.Models.Actor
@{
    ViewData["Title"] = Model.Name;
    var poateEdita = (ViewBag.AfisareButoane as bool?) ?? false;
    var photoUrl = string.IsNullOrEmpty(Model.PhotoUrl) 
        ? "https://ui-avatars.com/api/?name=" + Model.Name + "&size=400&background=random" 
        : Model.PhotoUrl;
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow border-0">
                <img src="@photoUrl" class="card-img-top" alt="@Model.Name">
                <div class="card-body text-center">
                    <h3 class="card-title fw-bold">@Model.Name</h3>
                    @if (poateEdita)
                    {
                        <div class="d-grid gap-2 mt-3">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editează</a>
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                                <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Sigur ștergi acest actor?')">Șterge</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h4 class="card-title border-bottom pb-2 mb-3">Biografie</h4>
                    <p class="card-text" style="white-space: pre-wrap;">@Model.Description</p>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="card-title border-bottom pb-2 mb-3">Filmografie (@(Model.ActorMovies?.Count ?? 0))</h4>
                    @if (Model.ActorMovies?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var am in Model.ActorMovies)
                            {
                                <a href="/Movies/Show/@am.MovieId" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <span>@am.Movie?.Title</span>
                                    <span class="badge bg-secondary rounded-pill">@am.Movie?.ReleaseDate.Year</span>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Niciun film adăugat.</p>
                    }
                </div>
            </div>
            
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Înapoi la listă</a>
            </div>
        </div>
    </div>
</div>
