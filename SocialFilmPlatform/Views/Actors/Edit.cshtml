@model SocialFilmPlatform.Models.Actor
@{
    ViewData["Title"] = "Editează Actor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="mb-4">Editează Actor</h2>
                    
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nume</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Poză</label>
                            <input type="file" name="Image" class="form-control" accept="image/*" />
                            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                            {
                                <div class="mt-2">
                                   <small>Poză curentă:</small>
                                   <img src="@Model.PhotoUrl" style="height: 50px; width: 50px; object-fit: cover;" class="rounded-circle ms-2"/>
                                </div>
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Biografie / Descriere</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">Înapoi</a>
                            <button type="submit" class="btn btn-success px-4">Actualizează</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
