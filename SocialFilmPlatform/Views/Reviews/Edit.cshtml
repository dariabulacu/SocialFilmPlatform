@model SocialFilmPlatform.Models.Review

<div class="container py-4">
    <h2>Edit Review</h2>
    <br />

    <form asp-action="Edit" asp-controller="Reviews" asp-route-id="@Model.Id" method="post" id="editReviewForm">
        <input type="hidden" asp-for="Content" id="reviewContent" />
        
        <div class="form-group">
            <label class="form-label">Review Content</label>
            <br />
            <div id="editor" style="height: 300px; background: white;"></div>
            <small class="text-muted">Use the toolbar to format text</small>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <br /><br />

        <button class="btn btn-primary" type="submit">Edit Review</button>
        <a asp-controller="Movies" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <!-- Include Quill.js stylesheet -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    
    <!-- Include Quill.js library -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    
    <script>
        // Init Quill
        var quill = new Quill('#editor', {
            theme: 'snow',
            placeholder: 'Write your review here...',
            modules: {
                toolbar: [
                    [{ 'header': [1, 2, 3, false] }],
                    ['bold', 'italic', 'underline', 'strike'],
                    [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                    [{ 'color': [] }, { 'background': [] }],
                    ['link'],
                    ['clean']
                ]
            }
        });

        // Load existing content
        var existingContent = @Html.Raw(Json.Serialize(Model.Content ?? ""));
        quill.root.innerHTML = existingContent;

        // On submit, save contents to hidden field
        document.getElementById('editReviewForm').addEventListener('submit', function(e) {
            var content = quill.root.innerHTML;
            
            // Check if empty
            if (quill.getText().trim().length === 0) {
                e.preventDefault();
                alert('Please write a review before submitting.');
                return false;
            }
            
            document.getElementById('reviewContent').value = content;
        });
    </script>
}


