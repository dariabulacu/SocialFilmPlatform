@model SocialFilmPlatform.Models.Genre
@{
    ViewData["Title"] = "Edit Genre";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4" style="font-family: 'Cinzel', serif;">EDIT GENRE</h2>
            
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Edit" asp-controller="Genres" asp-route-id="@Model.Id" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="GenreName" class="form-label text-uppercase small fw-bold text-muted">Genre Name</label>
                            <input asp-for="GenreName" class="form-control form-control-lg" />
                            <span asp-validation-for="GenreName" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-dark px-4">Update Genre</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>