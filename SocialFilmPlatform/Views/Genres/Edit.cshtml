@model SocialFilmPlatform.Models.Genre
@{
	ViewBag.Title = "Editare Gen"; 
}
<h2> @ViewBag.Title</h2>

<form asp-action="Edit" asp-controller="Genres" asp-route-id = "@Model.Id" method = "post">
	<div class="form-group">
		<label asp-for = "GenreName" class="form-label">Denumire gen</label>
		<br />
		<input asp-for="GenreName" class="form-control"/>
		<span asp-validation-for="GenreName" class="text-danger"></span>

	</div>
	<br/>
	<button class="btn btn-success" type="submit">Modifica genul.</button>
</form>