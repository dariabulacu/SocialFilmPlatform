@{
    ViewBag.Title = "Archive of Genres";
    var genres = ViewBag.Genres as IEnumerable<SocialFilmPlatform.Models.Genre>;
}

<style>
    :root {
        --hollywood-bg: #fdfbf7;
        --hollywood-text: #1a1a1a;
        --hollywood-gold: #c4a055;
        --font-display: 'Cinzel', serif;
        --font-body: 'Lato', sans-serif;
    }

    h2 {
        font-family: var(--font-display);
        text-transform: uppercase;
        letter-spacing: 2px;
        color: #111;
        margin-bottom: 2rem;
    }

    .btn-add-genre {
        background: #111;
        color: #fff !important;
        font-family: var(--font-display);
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 0;
        padding: 0.6rem 1.5rem;
        border: 1px solid #111;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }
    
    .btn-add-genre:hover {
        background: transparent;
        color: #111 !important;
    }

    /* Card Vintage */
    .genre-card-vintage {
        background: transparent;
        border: none;
        transition: transform 0.3s;
    }

    .genre-card-vintage:hover {
        transform: translateY(-5px);
    }
    
    .card-img-wrapper {
        position: relative;
        overflow: hidden;
        margin-bottom: 1rem;
        aspect-ratio: 16/9; /* Wider for genres */
    }

    .card-img-vintage {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: sepia(20%) contrast(90%) brightness(0.9);
        transition: filter 0.3s, transform 0.5s;
    }

    .genre-card-vintage:hover .card-img-vintage {
        filter: sepia(0%) contrast(100%);
        transform: scale(1.03);
    }
    
    .card-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background 0.3s;
    }

    .genre-card-vintage:hover .card-overlay {
        background: rgba(0,0,0,0.1);
    }

    .card-title-vintage {
        font-family: var(--font-display);
        font-size: 1.5rem;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 0 2px 4px rgba(0,0,0,0.8);
        margin: 0;
    }

    .alert-custom {
        background: #fff;
        border: 1px solid #333;
        font-family: var(--font-body);
        border-radius: 0;
    }
    
    .btn-action-sm {
        font-size: 0.8rem;
        padding: 0.2rem 0.5rem;
        border-radius: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-family: var(--font-body);
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-end mb-5 border-bottom border-dark pb-3">
        <h2 class="mb-0">Genre Collection</h2>
        
        @if (User.IsInRole("Editor") || User.IsInRole("Admin"))
        {
            <a asp-controller="Genres" asp-action="New" class="btn btn-add-genre">
                <i class="bi bi-plus-lg me-2"></i>New Genre
            </a>
        }
    </div>

    @if(ViewBag.Message != null)
    {
        <div class="alert alert-custom text-center mb-5 p-3">
            @ViewBag.Message
        </div>
    }

    @if (genres == null || !genres.Any())
    {
        <div class="alert alert-light border text-center py-5">
            <h4 class="text-muted">No genres found in the archive.</h4>
        </div>
    }
    else
    {
        <!-- Genre Grid -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var genre in genres)
            {
                <div class="col">
                    <div class="genre-card-vintage h-100 position-relative">
                        <a asp-controller="Genres" asp-action="Show" asp-route-id="@genre.Id" class="text-decoration-none">
                            <div class="card-img-wrapper" style="background: linear-gradient(135deg, #1a1a1a 0%, #333 100%); display: flex; align-items: center; justify-content: center; border: 1px solid #333;">
                                <!-- Replaced broken image with a styled text/icon visual -->
                                <div class="text-center p-3">
                                    <i class="bi bi-film text-secondary mb-2" style="font-size: 2rem; opacity: 0.5;"></i>
                                    <h5 class="card-title-vintage" style="font-size: 1.8rem;">@genre.GenreName</h5>
                                    <div style="width: 40px; height: 1px; background: var(--hollywood-gold); margin: 10px auto;"></div>
                                </div>
                            </div>
                        </a>
                        
                        @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                        {
                            <div class="d-flex justify-content-end p-2 gap-2 position-absolute" style="top:0; right:0; z-index:2;">
                                <a asp-controller="Genres" asp-action="Edit" asp-route-id="@genre.Id" 
                                   class="btn btn-light btn-action-sm opacity-75">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-controller="Genres" asp-action="Delete" asp-route-id="@genre.Id" 
                                      method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-action-sm opacity-75"
                                            onclick="return confirm('Archive deletion is permanent. Proceed?');">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>
