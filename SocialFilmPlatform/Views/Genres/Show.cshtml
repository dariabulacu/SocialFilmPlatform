@model SocialFilmPlatform.Models.Genre

@{
    ViewBag.Title = "Afișare Gen";
}

<h2>@ViewBag.Title</h2>

<br />

<p><strong>Nume gen:</strong> @Model.GenreName</p>

<hr />

<h4>Filme din acest gen</h4>

@if (Model.Movies == null || !Model.Movies.Any())
{
    <p>Nu există filme pentru acest gen.</p>
}
else
{
    <ul>
        @foreach (var movie in Model.Movies)
        {
            <li>@movie.Title (@movie.Director)</li>
        }
    </ul>
}

<hr />

@if (User.IsInRole("Admin") || User.IsInRole("Editor"))
{
    <form method="post" asp-controller="Genres" asp-action="Delete"
          asp-route-id="@Model.Id">
        <button class="btn btn-danger" type="submit">Șterge genul</button>
    </form>
}

<br />

<a class="btn btn-success" href="/Genres/Index">Afișare listă de genuri</a>