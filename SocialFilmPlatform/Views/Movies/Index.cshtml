@model SocialFilmPlatform.Models.Movie

<style>
    :root {
        --hollywood-bg: #fdfbf7;
        --hollywood-text: #1a1a1a;
        --hollywood-gold: #c4a055;
        --font-display: 'Cinzel', serif;
        --font-body: 'Lato', sans-serif;
    }

    h2 {
        font-family: var(--font-display);
        text-transform: uppercase;
        letter-spacing: 2px;
        color: #111;
        margin-bottom: 2rem;
    }

    /* Search Bar */
    .search-vintage input {
        border: none;
        border-bottom: 1px solid #333;
        background: transparent;
        border-radius: 0;
        font-family: var(--font-body);
        padding: 0.8rem 0;
        color: #111;
    }
    
    .search-vintage input:focus {
        background: transparent;
        box-shadow: none;
        border-color: var(--hollywood-gold);
        color: #000;
    }

    .btn-search {
        border: 1px solid #333;
        background: transparent;
        color: #333;
        font-family: var(--font-display);
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s;
        border-radius: 0;
    }

    .btn-search:hover {
        background: #111;
        color: #fff;
    }

    .btn-add-movie {
        background: #111;
        color: #fff !important;
        font-family: var(--font-display);
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 0;
        padding: 0.6rem 1.5rem;
        border: 1px solid #111;
        transition: all 0.3s;
    }
    
    .btn-add-movie:hover {
        background: transparent;
        color: #111 !important;
    }

    /* Movie Card */
    .movie-card-vintage {
        background: transparent;
        border: none;
        transition: transform 0.3s;
    }

    .movie-card-vintage:hover {
        transform: translateY(-5px);
    }
    
    .card-img-wrapper {
        position: relative;
        overflow: hidden;
        margin-bottom: 1rem;
        aspect-ratio: 2/3;
    }

    .card-img-vintage {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: sepia(20%) contrast(95%);
        transition: filter 0.3s, transform 0.5s;
    }

    .movie-card-vintage:hover .card-img-vintage {
        filter: sepia(0%) contrast(100%);
        transform: scale(1.03);
    }

    .card-title-vintage {
        font-family: var(--font-display);
        font-size: 1.1rem;
        margin-bottom: 0.3rem;
        color: #000;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card-meta {
        font-family: var(--font-body);
        font-size: 0.85rem;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Pagination */
    .pagination {
        border-top: 1px solid #ddd;
        padding-top: 2rem;
        justify-content: center;
    }

    .page-link {
        border: none;
        background: transparent;
        color: #333;
        font-family: var(--font-display);
        font-weight: 700;
        margin: 0 5px;
        border-radius: 50% !important;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .page-link:hover, .page-item.active .page-link {
        background: #111;
        color: #fff;
    }

    .alert-custom {
        background: #fff;
        border: 1px solid #333;
        font-family: var(--font-body);
        border-radius: 0;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-end mb-5 border-bottom border-dark pb-3">
        <h2 class="mb-0">Film Catalog Archive</h2>
        
        @if (User.IsInRole("Editor") || User.IsInRole("Admin"))
        {
            <a asp-controller="Movies" asp-action="New" class="btn btn-add-movie">
                <i class="bi bi-plus-lg me-2"></i>Add Record
            </a>
        }
    </div>

    @if(ViewBag.Message != null)
    {
        <div class="alert alert-custom text-center mb-5 p-3">
            @ViewBag.Message
        </div>
    }

    <!-- Search -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
            <form method="GET" class="search-vintage">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search archive..." name="search"
                           value="@ViewBag.SearchString">
                    <button class="btn btn-search px-4" type="submit">SEARCH</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Movie Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-5 justify-content-center">
        @foreach (var movie in ViewBag.Movies)
        {
            var posterUrl = string.IsNullOrEmpty(movie.ImageUrl) 
                ? "https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=500&auto=format&fit=crop" 
                : movie.ImageUrl;

            <div class="col">
                <div class="movie-card-vintage h-100">
                    <a asp-controller="Movies" asp-action="Show" asp-route-id="@movie.Id" class="text-decoration-none">
                        <div class="card-img-wrapper">
                            <img src="@posterUrl" class="card-img-vintage" alt="@movie.Title">
                        </div>
                        <div class="text-center">
                            <h5 class="card-title-vintage text-truncate">@movie.Title</h5>
                            <div class="card-meta">
                                <span class="me-2">@movie.ReleaseDate.ToString("yyyy")</span>
                                @if(movie.Genre != null)
                                {
                                    <span>â€¢ @movie.Genre.GenreName</span>
                                }
                            </div>
                            <div class="mt-2 text-warning small">
                                <i class="bi bi-star-fill"></i> @movie.Score
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="mt-5">
        <nav aria-label="Archive pagination">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="@(ViewBag.PaginationBaseUrl + "1")" aria-label="First">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.lastPage; i++)
                {
                    <li class="page-item @(Context.Request.Query["page"] == i.ToString() ? "active" : "")"> 
                        <a class="page-link" href="@(ViewBag.PaginationBaseUrl + i)">@(i)</a> 
                    </li>
                }

                <li class="page-item">
                    <a class="page-link" href="@(ViewBag.PaginationBaseUrl + ViewBag.lastPage)" aria-label="Last">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>