@model SocialFilmPlatform.Models.Movie

<h2 class="text-center mt-5">Editare film</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            <form method="post" asp-action="Edit" asp-controller="Movies" asp-route-id="@Model.Id">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="form-label">Titlu film</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="Director" class="form-label">Regizor</label>
                    <input asp-for="Director" class="form-control" />
                    <span asp-validation-for="Director" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Descriere film</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="Score" class="form-label">Scor</label>
                    <input asp-for="Score" type="number" step="0.1" class="form-control" />
                    <span asp-validation-for="Score" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="ReleaseDate" class="form-label">Data lansării</label>
                    <input asp-for="ReleaseDate" type="date" class="form-control" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="GendreId" class="form-label">Selectează genul</label>
                    <select asp-for="GendreId" asp-items="ViewBag.Genres" class="form-control">
                        <option value="">Selectează genul</option>
                    </select>
                    <span asp-validation-for="GendreId" class="text-danger"></span>
                    <br />
                </div>

                <button class="btn btn-sm btn-success" type="submit">Modifică film</button>
            </form>
        </div>
    </div>
</div>