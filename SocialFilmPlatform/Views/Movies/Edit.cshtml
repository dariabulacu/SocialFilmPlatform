@model SocialFilmPlatform.Models.Movie

<h2 class="text-center mt-5">Edit Movie</h2>

<br />

<div class="container mt-5 mb-5 pb-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            <form method="post" asp-action="Edit" asp-controller="Movies" asp-route-id="@Model.Id" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="form-label">Movie Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="Director" class="form-label">Director</label>
                    <input asp-for="Director" class="form-control" />
                    <span asp-validation-for="Director" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Movie Description</label>
                    <input type="hidden" asp-for="Description" />
                    <div id="descriptionEditor" style="height: 200px; background: white;"></div>
                    <small class="text-muted">Use the toolbar to format text</small>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="Score" class="form-label">Scor</label>
                    <input asp-for="Score" type="number" step="0.1" class="form-control" />
                    <span asp-validation-for="Score" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="ReleaseDate" class="form-label">Release Date</label>
                    <input asp-for="ReleaseDate" type="date" class="form-control" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="TrailerUrl" class="form-label">Link Trailer (YouTube)</label>
                    <input asp-for="TrailerUrl" class="form-control" placeholder="https://www.youtube.com/watch?v=..." />
                    <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label class="form-label">Change Image (Poster/Backdrop)</label>
                    <input type="file" name="Image" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mt-2">
                           <small>Current Image:</small>
                           <img src="@Model.ImageUrl" style="height: 50px;" class="rounded ms-2"/>
                        </div>
                    }
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="GenreId" class="form-label">Select Genre</label>
                    <select asp-for="GenreId" asp-items="ViewBag.Genres" class="form-control">
                        <option value="">Select Genre</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                    <br />
                </div>

                <button class="btn btn-sm btn-success" type="submit">Update Movie</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include Quill.js stylesheet -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    
    <!-- Include Quill.js library -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    
    <script>
        // Init Quill editor for description
        var quillDescription = new Quill('#descriptionEditor', {
            theme: 'snow',
            placeholder: 'Write movie description here...',
            modules: {
                toolbar: [
                    [{ 'header': [1, 2, 3, false] }],
                    ['bold', 'italic', 'underline', 'strike'],
                    [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                    [{ 'color': [] }, { 'background': [] }],
                    ['link'],
                    ['clean']
                ]
            }
        });

        var existingDescription = @Html.Raw(Json.Serialize((Model.Description ?? "")));
        console.log('Existing description:', existingDescription);
        quillDescription.root.innerHTML = existingDescription;

        quillDescription.on('text-change', function() {
            var content = quillDescription.root.innerHTML;
            document.getElementById('Description').value = content;
            console.log('Description updated:', content.substring(0, 100));
        });

        document.querySelector('form').addEventListener('submit', function(e) {
            var content = quillDescription.root.innerHTML;
            var textContent = quillDescription.getText().trim();
            
            console.log('Submit triggered');
            console.log('Content length:', content.length);
            console.log('Text content:', textContent);
            
            if (textContent.length === 0) {
                e.preventDefault();
                alert('Please add a description for the movie.');
                return false;
            }
            
            document.getElementById('Description').value = content;
            console.log('Final description value set');
        });
    </script>
}
