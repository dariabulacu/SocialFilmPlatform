@model SocialFilmPlatform.Models.Movie
@{
    ViewData["Title"] = $"Detalii film – {Model.Title}";
    var poateEdita = ViewBag.AfisareButoane as bool? ?? false;
    var esteAdmin = ViewBag.EsteAdmin as bool? ?? false;
    var userCurentId = ViewBag.UserCurent as string;
    var esteOwner = !string.IsNullOrEmpty(Model.UserId) && Model.UserId == userCurentId;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-start mb-3">
        <div>
            <h1 class="display-6 mb-1">@Model.Title</h1>
            <p class="text-muted mb-0">Regizor: <strong>@Model.Director</strong></p>
            <p class="text-muted">Lansat pe @Model.ReleaseDate.ToString("dd MMM yyyy")</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-action="Index">Înapoi la listă</a>
            @if (poateEdita || esteAdmin || esteOwner)
            {
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editează</a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Sigur ștergi filmul?');">
                        Șterge
                    </button>
                </form>

            }
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Descriere</h5>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Distribuție</h5>
                    @if (Model.ActorMovies?.Any() == true)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var actorMovie in Model.ActorMovies)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@actorMovie.Actor?.Name</span>
                                    <span class="text-muted">ID actor: @actorMovie.ActorId</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Nu există actori asociați.</p>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Recenzii (@(Model.Reviews?.Count ?? 0))</h5>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="mb-3">
                            <form asp-controller="Reviews" asp-action="New" method="post" class="mb-3">
                                <input type="hidden" name="MovieId" value="@Model.Id" />
                                <div class="mb-2">
                                    <textarea name="Content" class="form-control" rows="3" 
                                              placeholder="Scrie recenzia ta aici..." required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-sm">Adaugă recenzie</button>
                            </form>
                        </div>
                        <hr />
                    }
                    else
                    {
                        <p class="text-muted small mb-3">
                            <a asp-area="Identity" asp-page="/Account/Login">Autentifică-te</a> pentru a scrie o recenzie.
                        </p>
                    }

                    @if (Model.Reviews?.Any() == true)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var review in Model.Reviews.OrderByDescending(r => r.DatePosted))
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <strong>@(review.User?.UserName ?? "Anonim")</strong>
                                            <span class="text-muted small ms-2">
                                                @review.DatePosted.ToString("dd.MM.yyyy HH:mm")
                                            </span>
                                        </div>
                                        @if (User.Identity.IsAuthenticated && 
                                             (review.UserId == userCurentId || esteAdmin))
                                        {
                                            <div class="d-flex gap-2">
                                                <a class="btn btn-sm btn-outline-secondary d-flex align-items-center gap-1" 
                                                   asp-controller="Reviews" 
                                                   asp-action="Edit" 
                                                   asp-route-id="@review.Id"
                                                   title="Editează recenzia">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                                    </svg>
                                                    <span class="d-none d-sm-inline">Editează</span>
                                                </a>
                                                <form asp-controller="Reviews" 
                                                      asp-action="Delete" 
                                                      asp-route-id="@review.Id" 
                                                      method="post" 
                                                      class="d-inline"
                                                      onsubmit="return confirm('Sigur ștergi recenzia?');">
                                                    <button type="submit" 
                                                            class="btn btn-sm btn-outline-danger d-flex align-items-center gap-1"
                                                            title="Șterge recenzia">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                                                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                                                        </svg>
                                                        <span class="d-none d-sm-inline">Șterge</span>
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                    </div>
                                    <div>@review.Content</div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Nicio recenzie momentan.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Informații generale</h5>
                    <dl class="row mb-0">
                        <dt class="col-6">Scor</dt>
                        <dd class="col-6"><span class="badge bg-primary fs-6">@Model.Score</span></dd>

                        <dt class="col-6">Gen</dt>
                        <dd class="col-6">@(Model.Genre?.GenreName ?? "Nespecificat")</dd>

                        <dt class="col-6">Adăugat de</dt>
                        <dd class="col-6">@(Model.User?.UserName ?? "Anonim")</dd>

                        <dt class="col-6">Jurnale</dt>
                        <dd class="col-6">@(Model.MovieDiaries?.Count ?? 0)</dd>
                    </dl>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Actorii simpli (@(Model.Actors?.Count ?? 0))</h5>
                    @if (Model.Actors?.Any() == true)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var actor in Model.Actors)
                            {
                                <li class="list-group-item">@actor.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Nu există actori direcți.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

