@model SocialFilmPlatform.Models.Movie
@{
    ViewData["Title"] = $"Detalii film – {Model.Title}";
    var poateEdita = ViewBag.AfisareButoane as bool? ?? false;
    var esteAdmin = ViewBag.EsteAdmin as bool? ?? false;
    var userCurentId = ViewBag.UserCurent as string;
    var esteOwner = !string.IsNullOrEmpty(Model.UserId) && Model.UserId == userCurentId;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-start mb-3">
        <div>
            <h1 class="display-6 mb-1">@Model.Title</h1>
            <p class="text-muted mb-0">Regizor: <strong>@Model.Director</strong></p>
            <p class="text-muted">Lansat pe @Model.ReleaseDate.ToString("dd MMM yyyy")</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-action="Index">Înapoi la listă</a>
            @if (poateEdita || esteAdmin || esteOwner)
            {
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editează</a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Sigur ștergi filmul?');">
                        Șterge
                    </button>
                </form>

            }
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Descriere</h5>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Distribuție</h5>
                    @if (Model.ActorMovies?.Any() == true)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var actorMovie in Model.ActorMovies)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@actorMovie.Actor?.Name</span>
                                    <span class="text-muted">ID actor: @actorMovie.ActorId</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Nu există actori asociați.</p>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Recenzii (@(Model.Reviews?.Count ?? 0))</h5>
                    @if (Model.Reviews?.Any() == true)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var review in Model.Reviews)
                            {
                                <li class="list-group-item">
                                    @* <div class="fw-semibold">Scor: @review.Score</div> *@
                                    <div>@review.Content</div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Nicio recenzie momentan.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Informații generale</h5>
                    <dl class="row mb-0">
                        <dt class="col-6">Scor</dt>
                        <dd class="col-6"><span class="badge bg-primary fs-6">@Model.Score</span></dd>

                        <dt class="col-6">Gen</dt>
                        <dd class="col-6">@Model.Genre?.GenreName ?? "Nespecificat"</dd>

                        <dt class="col-6">Adăugat de</dt>
                        <dd class="col-6">@Model.User?.UserName ?? "Anonim"</dd>

                        <dt class="col-6">Jurnale</dt>
                        <dd class="col-6">@Model.MovieDiaries?.Count ?? 0</dd>
                    </dl>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Actorii simpli (@(Model.Actors?.Count ?? 0))</h5>
                    @if (Model.Actors?.Any() == true)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var actor in Model.Actors)
                            {
                                <li class="list-group-item">@actor.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Nu există actori direcți.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

