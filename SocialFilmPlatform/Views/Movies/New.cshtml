@model SocialFilmPlatform.Models.Movie
@{
    ViewData["Title"] = "Adaugă film";
    var genreItems = ViewBag.Genres as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
}

<h2 class="text-center mt-5">Adaugă un film</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="New" asp-controller="Movies" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Titlu film</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Director" class="form-label">Regizor</label>
                            <input asp-for="Director" class="form-control" />
                            <span asp-validation-for="Director" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descriere</label>
                            <textarea name="Description" id="Description" style="display:none;"></textarea>
                            <div id="descriptionEditor" style="height: 200px; background: white;"></div>
                            <small class="text-muted">Folosește bara de instrumente pentru a formata textul</small>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>


                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Score" class="form-label">Scor</label>
                                <input asp-for="Score" type="number" step="0.1" class="form-control" />
                                <span asp-validation-for="Score" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ReleaseDate" class="form-label">Data lansării</label>
                                <input asp-for="ReleaseDate" type="date" class="form-control" />
                                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-3">
                            <label asp-for="GenreId" class="form-label">Gen cinematografic</label>
                            <select asp-for="GenreId" asp-items="genreItems" class="form-select">
                                <option value="">Selectează genul</option>
                            </select>
                            <span asp-validation-for="GenreId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">Înapoi la listă</a>
                            <button type="submit" class="btn btn-success" id="submitBtn">Salvează</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include Quill.js stylesheet -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    
    <!-- Include Quill.js library -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    
    
    <script>
        // Inițializează editorul Quill pentru descriere
        var quillDescription = new Quill('#descriptionEditor', {
            theme: 'snow',
            placeholder: 'Scrie descrierea filmului aici... Folosește bara de instrumente pentru formatare.',
            modules: {
                toolbar: [
                    [{ 'header': [1, 2, 3, false] }],
                    ['bold', 'italic', 'underline', 'strike'],
                    [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                    [{ 'color': [] }, { 'background': [] }],
                    ['link'],
                    ['clean']
                ]
            }
        });

        // Actualizează câmpul ascuns la fiecare schimbare
        quillDescription.on('text-change', function() {
            var content = quillDescription.root.innerHTML;
            document.getElementById('Description').value = content;
            console.log('Description updated:', content.substring(0, 100));
        });

        // La submit, salvează conținutul HTML în câmpul ascuns
        document.querySelector('form').addEventListener('submit', function(e) {
            var content = quillDescription.root.innerHTML;
            var textContent = quillDescription.getText().trim();
            
            console.log('Submit triggered');
            console.log('Content length:', content.length);
            console.log('Text content:', textContent);
            
            // Verifică dacă editorul este gol
            if (textContent.length === 0) {
                e.preventDefault();
                alert('Te rog să adaugi o descriere pentru film.');
                return false;
            }
            
            // Setează valoarea în câmpul textarea
            document.getElementById('Description').value = content;
            console.log('Final description value set');
        });
    </script>
}
            }
        });
    </script>
}
