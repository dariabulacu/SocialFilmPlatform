@model SocialFilmPlatform.Models.Movie
@{
    ViewData["Title"] = "Add Movie";
    var genreItems = ViewBag.Genres as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
}

<h2 class="text-center mt-5">Add a Movie</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="New" asp-controller="Movies" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Movie Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Director" class="form-label">Director</label>
                            <input asp-for="Director" class="form-control" />
                            <span asp-validation-for="Director" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea name="Description" id="Description" style="display:none;"></textarea>
                            <div id="descriptionEditor" style="height: 200px; background: white;"></div>
                            <small class="text-muted">Use the toolbar to format text</small>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>


                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Score" class="form-label">Score</label>
                                <input asp-for="Score" type="number" step="0.1" class="form-control" />
                                <span asp-validation-for="Score" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ReleaseDate" class="form-label">Release Date</label>
                                <input asp-for="ReleaseDate" type="date" class="form-control" />
                                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 mt-3">
                            <label asp-for="TrailerUrl" class="form-label">Trailer Link (YouTube)</label>
                            <input asp-for="TrailerUrl" class="form-control" placeholder="https://www.youtube.com/watch?v=..." />
                            <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3 mt-3">
                            <label class="form-label">Image (Poster/Backdrop)</label>
                            <input type="file" name="Image" class="form-control" accept="image/*" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mt-3">
                            <label asp-for="GenreId" class="form-label">Genre</label>
                            <select asp-for="GenreId" asp-items="genreItems" class="form-select">
                                <option value="">Select Genre</option>
                            </select>
                            <span asp-validation-for="GenreId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                            <button type="submit" class="btn btn-success" id="submitBtn">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include Quill.js stylesheet -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    
    <!-- Include Quill.js library -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    
    
    <script>

        var quillDescription = new Quill('#descriptionEditor', {
            theme: 'snow',
            placeholder: 'Write movie description here... Use the toolbar for formatting.',
            modules: {
                toolbar: [
                    [{ 'header': [1, 2, 3, false] }],
                    ['bold', 'italic', 'underline', 'strike'],
                    [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                    [{ 'color': [] }, { 'background': [] }],
                    ['link'],
                    ['clean']
                ]
            }
        });


        quillDescription.on('text-change', function() {
            var content = quillDescription.root.innerHTML;
            document.getElementById('Description').value = content;
            console.log('Description updated:', content.substring(0, 100));
        });


        document.querySelector('form').addEventListener('submit', function(e) {
            var content = quillDescription.root.innerHTML;
            var textContent = quillDescription.getText().trim();
            
            console.log('Submit triggered');
            console.log('Content length:', content.length);
            console.log('Text content:', textContent);
            

            if (textContent.length === 0) {
                e.preventDefault();
                alert('Please add a description for the movie.');
                return false;
            }
            

            document.getElementById('Description').value = content;
            console.log('Final description value set');
        });
    </script>
}
            }
        });
    </script>
}
