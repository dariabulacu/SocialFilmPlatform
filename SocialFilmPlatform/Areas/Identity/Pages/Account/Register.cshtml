@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .card-vintage {
        background-color: #fff;
        border: 1px solid var(--vintage-gold);
        border-radius: 2px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }
    .vintage-heading {
        font-family: var(--font-display);
        color: #111;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 700;
    }
    .vintage-subheading {
        font-family: var(--font-body);
        font-style: italic;
        color: #666;
    }
    .btn-vintage {
        background-color: #111;
        color: #fff;
        border: 1px solid #111;
        font-family: var(--font-display);
        text-transform: uppercase;
        letter-spacing: 2px;
        padding: 12px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        border-radius: 0;
    }
    .btn-vintage:hover {
        background-color: var(--vintage-gold);
        border-color: var(--vintage-gold);
        color: #fff;
        transform: translateY(-2px);
    }
    .form-control-vintage {
        border: 1px solid #e0e0e0;
        border-radius: 0;
        padding: 12px;
        font-family: var(--font-body);
        background-color: #fdfdfd;
    }
    .form-control-vintage:focus {
        border-color: var(--vintage-gold);
        box-shadow: none;
        background-color: #fff;
    }
    .form-label {
        font-family: var(--font-body);
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 1px;
        color: #555;
    }
    .link-vintage {
        color: var(--vintage-gold);
        font-family: var(--font-body);
        /* font-style: italic; */
        transition: color 0.2s;
    }
    .link-vintage:hover {
        color: #111;
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="card card-vintage p-4 w-100" style="max-width: 450px;">
        <div class="card-body">
            <div class="text-center mb-5">
                <h2 class="vintage-heading mb-2">Create Account</h2>
                <p class="vintage-subheading">Start your collection</p>
            </div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4 text-center" role="alert"></div>
                
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email Address</label>
                    <input asp-for="Input.Email" class="form-control form-control-vintage" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control form-control-vintage" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-vintage" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>
                
                <div class="d-grid gap-2 mb-4">
                    <button id="registerSubmit" type="submit" class="btn btn-vintage">Register</button>
                </div>
            
                <div class="text-center border-top pt-3">
                    <p class="small text-muted mb-2">Already have an account?</p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="link-vintage text-decoration-none fw-bold">LOG IN</a>
                </div>
            </form>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
               <div class="text-center mt-3">
                    <span class="text-muted small">or register with</span>
                </div>
                <hr class="my-2" />
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center mt-3">
                    <div>
                        <p>
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-secondary btn-sm rounded-0 text-uppercase" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                    @provider.DisplayName
                                </button>
                            }
                        </p>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
